{
  "name": "hardhat-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for ram verma",
  "main": "index.ts",
  "author": "Ram Verma <ram.verma.gt@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "deploy": "hardhat --network goerli deploy --deploy-scripts ./deploy/testnet --report-gas",
    "verify": "hardhat --network goerli etherscan-verify --license 'UNLICENSED' --force-license",
    "test": "export REPORT_GAS=true && hardhat test",
    "clean": "rimraf ./artifacts/ && rimraf ./cache/ && rimraf ./coverage/",
    "coverage": "yarn clean && hardhat coverage --solcoverjs .solcover.js",
    "compile": "hardhat compile",
    "flatten": "hardhat flatten ./xyz.sol > ./flatten/xyz.sol",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "size": "hardhat size-contracts",
    "calls": "hardhat run ./scripts/calls.ts --network bsc --no-compile"
  },
  "dependencies": {
    "@makerdao/multicall": "^0.12.0",
    "@openzeppelin/contracts": "^4.4.1",
    "@openzeppelin/contracts-upgradeable": "^4.4.2",
    "@openzeppelin/upgrades": "^2.8.0",
    "base-64": "^1.0.0",
    "base64-js": "^1.5.1",
    "bluebird": "^3.7.2",
    "chai-string": "^1.5.0",
    "chalk": "4.0.0",
    "cli-progress": "^3.10.0",
    "dotenv": "^10.0.0",
    "hardhat-deploy": "^0.10.5",
    "lodash": "^4.17.21",
    "openzeppelin-solidity": "^4.4.2",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.20",
    "tetrix": "^0.2.0",
    "tetrix-sol": "1.0.0",
    "webpack": "^5.65.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "yarn:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "^1.13.0",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.2.22",
    "@types/chalk": "^0.4.31",
    "@types/cli-progress": "^3.9.2",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.9",
    "add": "^2.0.6",
    "chai": "^4.2.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.5.4",
    "hardhat": "^2.8.4",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-docgen": "^1.2.0",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "mocha": "^9.2.1",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "ts-node": "^10.4.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.2",
    "web3": "^1.6.1",
    "webpack-cli": "^4.9.1"
  }
}